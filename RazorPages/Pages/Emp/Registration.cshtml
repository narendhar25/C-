@page "{handler?}"
@model RazorPages.Pages.Emp.RegistrationModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
</head>
<body>
    <div class="row">
        <div class="col-lg-1">
            <form asp-page-handler="edit" method="post">
                <button class="btn btn-default">Edit</button>
            </form>
        </div>
        <div class="col-lg-1">
            <form asp-page-handler="delete" method="post">
                <button class="btn btn-default">Delete</button>
            </form>
        </div>
        <div class="col-lg-1">
            <form method="post">
                <button asp-page-handler="view"  class="btn btn-default">View</button>
                <button asp-page-handler="delete"  class="btn btn-default">View1</button>
                <input type="hidden" name="id" value="3" />
            </form>
        </div>
    </div>
    <h3 class="clearfix">@Model.Message</h3>
</body>
</html>

